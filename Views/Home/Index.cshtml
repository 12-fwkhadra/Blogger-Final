@{

    ViewData["Title"] = "Home Page";
}
<main>
    <div class="carousel">
        <button class="carousel_button carousel_button--left">
            <i class="fas fa-angle-left fa-3x"></i>
        </button>
        <div class="carousel_track-container">
            <ul class="carousel_track">
                <li class="carousel_slide current-slide">
                    <div class="main-carousel">
                        <div>
                            <h1>Searching for answers?</h1>
                            <h2>Ask us here!</h2>
                            <button type="button" class="btn btn-outline-primary btn-sm"> <a asp-action="Register"
                                    asp-controller="Account"> Sign in </a></button>
                        </div>
                        <img src="Online learning-cuate.png" alt="ask us questions">
                    </div>
                </li>
                <li class="carousel_slide">
                    <div class="main-carousel">
                        <div>
                            <h1>Have an Experience?</h1>
                            <h2>You can help!</h2>
                            <button type="button" class="btn btn-outline-primary btn-sm"> <a asp-action="Register"
                                    asp-controller="Account"> Sign in </a></button>
                        </div>
                        <img src="Online learning-bro (1).png" alt="help others">
                    </div>
                </li>
                <li class="carousel_slide">
                    <div class="main-carousel">
                        <div>
                            <h1>Interested to Know More...</h1>
                            <h2>Follow different topics!</h2>
                            <button type="button" class="btn btn-outline-primary btn-sm"> <a asp-action="Register"
                                    asp-controller="Account"> Sign in </a></button>
                        </div>
                        <img src="Course app-pana.png" alt="follow different topics">
                    </div>
                </li>
            </ul>
        </div>
        <button class="carousel_button carousel_button--right">
            <i class="fas fa-angle-right fa-3x"></i>
        </button>
    </div>
</main>