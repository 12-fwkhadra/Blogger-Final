@model AnswerModel
@{
    Layout = "_Layout2";
    ViewData["Title"] = "Answers";
}

<div class="home_content">




    <div class="accordion">

        <div class="accordion-item">
            <div class="accordion-item-header">
                <div class="subber">
                    <div>
                        @Model.question.QuestionText
                    </div>
                </div>

                @* <ul>
                    <li>Topic: @Model.question.category.categoryName</li>
                    </ul> *@

            </div>
            <div class="accordion-item-body">
                <div class="accordion-item-body-content">
                    <div class="accordion-item-body-content-heading">
                        Date:
                    </div>
                    <div class="accordion-item-body-content-body">
                        @Model.question.QuestionDetails
                    </div>
                    <div class="accordion-item-body-content-buttons">
                        <a class="btn btn-outline-primary"><i class="fas fa-comment-alt"></i>&nbsp;&nbsp;Answers(nb)</a>
                        <button class="btn btn-outline-primary" asp-controller="FeedPage" asp-action="Save"><i
                                class="fas fa-bookmark"></i>&nbsp;&nbsp;Save</button>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="text">Answers </div>

    <div class="accordion">
        @foreach (var item in Model.answers)
        {
            <div class="accordion-item">
                <div class="accordion-item-header">
                    <div class="subber">
                        <div>
                            @item.AnswerText
                        </div>
                    </div>



                </div>
                <div class="accordion-item-body">
                    <div class="accordion-item-body-content">
                        <div class="accordion-item-body-content-heading">
                            Date:
                        </div>
                        <div class="accordion-item-body-content-body">
                            @item.AnswerDetails
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
</div>