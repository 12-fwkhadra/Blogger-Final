

@{
    Layout = null;
    ViewData["Title"] = "Bookmarks";
}

<!DOCTYPE html>

<html>
<head>
    <title>Bookmarks</title>
      <link rel="icon" href="~/MyStaticFiles/chat.png" />
      <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
      <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
      <link rel="stylesheet" href="~/MyStaticFiles/CSS/Bookmarks.css" asp-append-version="true"/>
      <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css">
        
</head>
<body>
<div class="sidebar active">
    <div class="logo_content">
        <div class="logo">
            <img
                    class="rounded-pill"
                    id="logo"
                    src="chat.png"
                    title="Chatter"
                    alt="can't be displayed"
                    style="height: 30px; width: 30px;"
            />
            <div class="logo_name">Blogger</div>
        </div>
        <i class="fas fa-bars" id="btn"></i>
    </div>
    <ul class="nav_list">
        <li>
            <a>
                <i class="fas fa-home"></i>
                <span class="links_name">Home</span>
            </a>
            <span class="tooltip">Home</span>
        </li>
        <li>
            <a>
                <i class="fas fa-question-circle"></i>
                <span class="links_name">Ask</span>
            </a>
            <span class="tooltip">Ask</span>
        </li>
        <li>
            <a>
                <i class="fas fa-user"></i>
                <span class="links_name">Profile</span>
            </a>
            <span class="tooltip">Profile</span>
        </li>
    </ul>
    <div class="profile_content">
        <div class="profile">
            <div class="profile_details">
                <div class="name_job">
                    <div class="name">UserName</div>
                </div>
            </div>
            <a asp-controller="Account" asp-action="Logout">
                <i class="fas fa-sign-out-alt" id="log_out"></i>
            </a>

        </div>
    </div>
</div>
<div class="home_content">
    <div class="text">Profile- Bookmarks</div>
    <div class="accordion">
        <div class="accordion-item">
            <div class="accordion-item-header">
                <div class="subber">
                    <div>
                        Question 1
                    </div>
                </div>

                <ul>
                    <li>Topic:</li>
                </ul>

            </div>
            <div class="accordion-item-body">
                <div class="accordion-item-body-content">
                    <div class="accordion-item-body-content-heading">
                        Date:
                    </div>
                    <div class="accordion-item-body-content-body">
                        Answer is set here.
                    </div>
                    <div class="accordion-item-body-content-buttons">
                        <button class="btn btn-outline-primary" asp-controller="FeedPage" asp-action="Answers"><i class="fas fa-comment-alt"></i>&nbsp;&nbsp;Answers(nb)</button>
                        <button class="btn btn-outline-primary" asp-controller="FeedPage" asp-action="Reply"><i class="fas fa-reply"></i>&nbsp;&nbsp;Reply</button>
                        <button class="btn btn-outline-primary" asp-controller="FeedPage" asp-action="Save"><i class="fas fa-bookmark"></i>&nbsp;&nbsp;Unsave</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="accordion-item">
            <div class="accordion-item-header">
                <div class="subber active">
                    <div>
                        Question 2
                    </div>
                </div>

                <ul>
                    <li>Topic:</li>
                </ul>

            </div>
            <div class="accordion-item-body">
                <div class="accordion-item-body-content">
                    <div class="accordion-item-body-content-heading">
                        Date:
                    </div>
                    <div class="accordion-item-body-content-body">
                        Answer is set here.
                    </div>
                    <div class="accordion-item-body-content-buttons">
                        <button class="btn btn-outline-primary"><i class="fas fa-comment-alt"></i>&nbsp;&nbsp;Answers(nb)</button>
                        <button class="btn btn-outline-primary"><i class="fas fa-reply"></i>&nbsp;&nbsp;Reply</button>
                        <button class="btn btn-outline-primary"><i class="fas fa-bookmark"></i>&nbsp;&nbsp;Unsave</button>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
 <script src="~/MyStaticFiles/CSS/FeedPage.js"></script>
</body>
</html>